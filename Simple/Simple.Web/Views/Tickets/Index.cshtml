@model IEnumerable<Simple.Web.Models.TicketViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Tickets</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


    @foreach (var item in Model) {
        @Html.Partial(MVC.Tickets.Views._Ticket, item)

        @Html.ActionLink(MVC.Tickets.ActionNames.Edit, MVC.Tickets.ActionNames.Edit, new { id = item.Id }) <span>|</span>
            @Html.ActionLink(MVC.Tickets.ActionNames.Details, MVC.Tickets.ActionNames.Details, new { id = item.Id })    <span>|</span>
    @Html.ActionLink(MVC.Tickets.ActionNames.Delete, MVC.Tickets.ActionNames.Delete, new { id = item.Id })

    }

